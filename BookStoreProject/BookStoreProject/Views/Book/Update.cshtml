
@{
    ViewData["Title"] = "Update Book";
}
@model BookViewModel

<h1 class="text-center">Update Book</h1>
<form asp-controller="Book" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Book Name</label>
        <input class="form-control" asp-for="Name" >
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Author">Book Author</label>
        <input class="form-control" asp-for="Author" >
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Year">Book Year</label>
        <input class="form-control" asp-for="Year" >
        <span class="text-danger" asp-validation-for="Year"></span>
    </div>
    <button class="btn btn-dark mt-3" type="submit">Update Book</button>
</form>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

